{
  "name": "rrq-ts",
  "version": "0.1.0",
  "description": "RRQ TypeScript producer and runner runtime.",
  "license": "MIT",
  "author": "RRQ Contributors",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./producer": {
      "types": "./dist/producer.d.ts",
      "default": "./dist/producer.js"
    },
    "./runner": {
      "types": "./dist/runner_runtime.d.ts",
      "default": "./dist/runner_runtime.js"
    }
  },
  "scripts": {
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:bundle": "bun build src/index.ts src/producer.ts src/runner_runtime.ts src/settings.ts src/constants.ts --outdir dist --format esm --target node --external koffi --external bun:ffi",
    "build": "bun run build:bundle && bun run build:types",
    "lint": "tsc -p tsconfig.json --noEmit",
    "oxlint": "oxlint src tests",
    "oxfmt": "oxfmt src tests",
    "oxfmt:check": "oxfmt --check src tests",
    "tsgo": "tsgo --project tsconfig.json --noEmit",
    "test": "bun test",
    "test:ffi": "sh ../scripts/with-producer-lib.sh -- sh -c \"cd rrq-ts && bun test\"",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "koffi": "^2.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@typescript/native-preview": "7.0.0-dev.20260128.1",
    "bun-types": "^1.0.30",
    "redis": "^4.6.13",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "typescript": "^5.6.3"
  }
}
